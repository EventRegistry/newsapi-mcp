{
  "name": "newsapi-mcp",
  "version": "1.1.3",
  "description": "MCP server for NewsAPI.ai (Event Registry)",
  "author": "Erik Novak",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "newsapi-mcp": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "newsapi"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EventRegistry/newsapi-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/EventRegistry/newsapi-mcp/issues"
  },
  "homepage": "https://github.com/EventRegistry/newsapi-mcp#readme",
  "scripts": {
    "build": "tsc",
    "build:bundle": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.js",
    "start": "node --env-file=.env dist/index.js",
    "dev": "tsx --env-file=.env src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "version": "node scripts/sync-version.js && git add src/version.ts",
    "prepublishOnly": "node scripts/sync-version.js && npm run build:bundle"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
